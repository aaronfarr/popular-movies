<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/ll_detail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@color/colorMaterialClouds"
        >
        <!-- Backdrop -->
        <ImageView
            android:id="@+id/iv_movie_backdrop"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:alpha="0.25"
            android:contentDescription="@string/movie_backdrop_description"  />
        <View
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@color/colorMaterialWhite"
            android:layout_marginTop="100dp">
        </View>
        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            <!-- Column One -->
            <ImageView
                android:id="@+id/iv_detail_movie_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:contentDescription="@string/movie_poster_description" />
            <!-- Column Two -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/tv_detail_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="42sp"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:minHeight="100dp"/>
                <TextView
                    android:id="@+id/tv_detail_movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/tv_detail_movie_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_detail_votes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />
                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">
                    <TextView
                        android:id="@+id/tv_detail_movie_synopsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>